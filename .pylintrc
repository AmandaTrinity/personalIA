[MASTER]
# Lista de diretórios e arquivos para ignorar durante a análise
ignore=tests,
       venv,
       env,
       .env,
       __pycache__,
       .git,
       .pytest_cache,
       node_modules,
       frontend,
       personalia,
       htmlcov,
       .coverage,
       build,
       dist,
       *.egg-info

# Lista de padrões de arquivos para ignorar
ignore-patterns=.*test.*\.py,
                .*_test\.py,
                conftest\.py,
                setup\.py

# Extensões de arquivo a serem verificadas
extension-pkg-whitelist=pydantic

[MESSAGES CONTROL]
# Desabilitar avisos específicos
disable=missing-module-docstring,
        missing-class-docstring,
        missing-function-docstring,
        too-few-public-methods,
        import-error,
        no-member,
        unused-argument,
        broad-except,
        invalid-name,
        line-too-long,
        too-many-arguments,
        too-many-locals,
        too-many-statements,
        too-many-branches,
        duplicate-code,
        fixme,
        protected-access

[FORMAT]
# Máximo de caracteres por linha
max-line-length=100

# Máximo de linhas em um módulo
max-module-lines=1000

[DESIGN]
# Máximo de argumentos para uma função/método
max-args=10

# Máximo de atributos para uma classe
max-attributes=15

# Máximo de variáveis locais para uma função/método
max-locals=20

# Máximo de declarações públicas para uma classe
max-public-methods=25

[SIMILARITIES]
# Número mínimo de linhas similares para considerar duplicação
min-similarity-lines=6

# Ignora comentários ao computar similaridades
ignore-comments=yes

# Ignora docstrings ao computar similaridades
ignore-docstrings=yes

# Ignora imports ao computar similaridades
ignore-imports=yes

[TYPECHECK]
# Lista de membros que são definidos dinamicamente
generated-members=pydantic.*,
                  fastapi.*,
                  motor.*,
                  google.*

[VARIABLES]
# Padrões de nomes de variáveis que devem ser ignorados
dummy-variables-rgx=_+$|(_[a-zA-Z0-9_]*[a-zA-Z0-9]+?$)|dummy|^ignored_|^unused_

[BASIC]
# Convenções de nomenclatura
good-names=i,
           j,
           k,
           ex,
           Run,
           _,
           id,
           db,
           app,
           api

# Padrões de nomes
function-rgx=[a-z_][a-z0-9_]{2,30}$
method-rgx=[a-z_][a-z0-9_]{2,30}$
variable-rgx=[a-z_][a-z0-9_]{2,30}$
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$
class-rgx=[A-Z_][a-zA-Z0-9]+$
module-rgx=(([a-z_][a-z0-9_]*)|([A-Z][a-zA-Z0-9]+))$